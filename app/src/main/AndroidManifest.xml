<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.billy.bloodbank">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BloodBank"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".actTwo"></activity>
        <activity android:name=".bloodCount" />
        <activity
            android:name=".Application_Form"
            android:label="@string/title_activity_application__form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".OptionActivity" />
        <activity android:name=".VerifyNumberActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>